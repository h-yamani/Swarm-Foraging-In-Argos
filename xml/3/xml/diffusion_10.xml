<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="0"
                ticks_per_second="10"
                random_seed="124" />
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>

    <footbot_diffusion_controller id="fdc"
                                  library="build/controllers/footbot_diffusion/libfootbot_diffusion.so">
      <actuators>
        <footbot_wheels implementation="default" />
        <footbot_leds   implementation="default" />
      </actuators>
      <sensors>
        <footbot_proximity implementation="rot_z_only" show_rays="true" calibrate="true" />
      </sensors>
      <parameters alpha="7.5" delta="0.1" velocity="5" />
    </footbot_diffusion_controller>

  </controllers>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="2, 2, 1">

    <box id="wall_north"
         position="0,1,0.25"
         orientation="0,0,0"
         size="2,0.1,0.5"
         movable="false" />
    <box id="wall_south"
         position="0,-1,0.25"
         orientation="0,0,0"
         size="2,0.1,0.5"
         movable="false" />
    <box id="wall_east"
         position="1,0,0.25"
         orientation="0,0,0"
         size="0.1,2,0.5"
         movable="false" />
    <box id="wall_west"
         position="-1,0,0.25"
         orientation="0,0,0"
         size="0.1,2,0.5"
         movable="false" />

    <!--
        You can distribute entities randomly. Here, we distribute
        the entities in this way:
        - the position is uniformly distributed
        on the ground, in the square whose corners are (-1,-1) and (1,1)
        - the orientations are non-zero only when rotating around Z and chosen
        from a gaussian distribution, whose mean is zero degrees and
        standard deviation is 360 degrees.
    -->
    <distribute>
      <position method="uniform" min="-1,-1,0" max="1,1,0" />
      <orientation method="gaussian" mean="0,0,0" std_dev="360,0,0" />
      <entity quantity="10" max_trials="100">
        <foot-bot id="fb"
                  controller="fdc" />
      </entity>
    </distribute>

  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics2d id="dyn2d" />
  </physics_engines>

  <!-- ************************************ -->
  <!-- * Arena -> Physics Engines mapping * -->
  <!-- ************************************ -->
  <arena_physics>
    <engine id="dyn2d">
      <!--
          You can use a regular expression to bind a set of entities.
          See 'man 3 regex' to know more about regular expressions.
      -->
      <entity id="fb_[[:digit:]]*" />
      <entity id="wall_north" />
      <entity id="wall_south" />
      <entity id="wall_east" />
      <entity id="wall_west" />
    </engine>
  </arena_physics>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <qtopengl_render splash="false" />
  </visualization>

</argos-configuration>
